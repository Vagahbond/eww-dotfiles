;; Launcher Widgets ;;
(defwidget launcher []
  (box
    :orientation "v"
    :space-evenly "false"
    ; :spacing -15
    (button
      :class "launcher-icon"
      :onclick "wofi --show=drun --line=5 --prompt='' &"
      
      (image
        :class "launcher-icon-image"
        :path "./bar/frameworks.png"
        :image-width 40
        :image-height 40
      )
    )
  )
  
)
